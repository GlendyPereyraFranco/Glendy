void main(void)
{
  int numero,i;
  
  printf("Calcula la cantidad de digitos introducidos \n");
  printf("Introduzca un numero positivo y que sea entero: \n");
	scanf("%d",&numero);

  i=0;
	while(numero>0)
	{

		numero=(numero/10);
		i=i+1;
	}
	printf("numeros de digitos introducidos del numero entero son: %d\n",i);

	getch();
}
