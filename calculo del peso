#include "stdafx.h"
#include "stdio.h"
#include "conio.h"

void main()
{
  char F, M, sex;
  float altura, peso;

	printf("\nINTRODUZCA EL SEXO DE LA PERSONA F DE FEMENINO O M DE MASCULINO:\n\n");
	scanf("%d", &sex);
		if (M)
		{
			printf("\nINTRODUZCA LA ALTURA DEL HOMBRE:\n\n");
			scanf("%d", &altura);
			peso=(72.2*altura)-58;
			printf("\nEL PESO DEL HOMBRE ES:\n\n");
			printf("\n%D\n", peso);
			peso=(72.2*altura)-58;

		}
		else (F)
		{
			printf("\nINTRODUZCA LA ALTURA DE LA MUJER:\n\n");
			scanf("%d", &altura);
			peso=(72.2*altura)-58;
			printf("\nEL PESO DE LA MUJER ES:\n\n");
			printf("\n%D\n", peso);
			peso=(72.2*altura)-58;

		}
getch();

}

